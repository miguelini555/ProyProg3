<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@color/crema">

    <Button
        android:id="@+id/start_activity_button_home"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="@color/rojo"
        android:gravity="center"
        android:text="START ACTIVITY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.402"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/habit_history_button_home"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/start_activity_button_home"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="40dp"
        android:backgroundTint="@color/rojo"
        android:text="HABIT HISTORY"/>

    <Button
        android:id="@+id/profile_button_home"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/rojo"
        android:text="PROFILE"
        tools:layout_editor_absoluteX="211dp"
        tools:layout_editor_absoluteY="80dp" />

    <ImageView
        android:layout_width="114dp"
        android:layout_height="79dp"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_button_home"
        android:background="@color/rojo"/>

    <TextView
        android:id="@+id/toDoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/profile_button_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:textSize="30dp"
        android:text="To Do"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/rojo"
        android:textStyle="bold"
        android:background = "@color/white"
        android:padding="10dp"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/toDoTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp">
    <LinearLayout
        android:id="@+id/daysLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">
        <TextView
            android:id="@+id/mondayTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monday"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/rojo"
            android:layout_marginBottom="4dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mondayTasksRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false" />
    </LinearLayout>
</ScrollView>

    <Button
        android:id="@+id/addTaskButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="+"
        android:textSize="40dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/rojo"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>