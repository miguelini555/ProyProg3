<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@color/crema">

    <Button
        android:id="@+id/start_activity_button_home"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/rojo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="START ACTIVITY"
        />
    <Button
        android:id="@+id/achievement_button_home"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/rojo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="ACHIEVEMENTS"
       />
    <Button
        android:id="@+id/habit_history_button_home"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/start_activity_button_home"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="40dp"
        android:backgroundTint="@color/rojo"
        android:text="HABIT HISTORY"/>
    <Button
        android:id="@+id/profile_button_home"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/achievement_button_home"
        app:layout_constraintStart_toStartOf="@+id/achievement_button_home"
        android:layout_marginStart="0dp"
        android:backgroundTint="@color/rojo"
        android:text="PROFILE"/>
</androidx.constraintlayout.widget.ConstraintLayout>