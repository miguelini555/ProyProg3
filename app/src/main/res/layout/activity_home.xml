<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@color/crema">

    <!-- Navigation Buttons -->
    <Button
        android:id="@+id/profile_button_home"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/rojo"
        android:text="PROFILE"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/habit_history_button_home"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/rojo"
        android:text="HABIT HISTORY"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_button_home"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/start_activity_button_home"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/rojo"
        android:text="START ACTIVITY"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/habit_history_button_home"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp" />
    <TextView
        android:id="@+id/toDoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To Do"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="@color/rojo"
        android:layout_marginStart="20dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toTopOf="@id/habit_history_button_home"
        app:layout_constraintStart_toEndOf="@id/habit_history_button_home"/>

    <!-- To-Do List Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/toDoCard"
        android:layout_width="300dp"
        android:layout_height="450dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start_activity_button_home"
        android:backgroundTint="@color/white">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Section: Hoy -->
                <TextView
                    android:id="@+id/todayTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today - [Fecha de Hoy]"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/rojo"
                    android:paddingBottom="8dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/todayTasksRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />

                <!-- Section: Ma単ana -->
                <TextView
                    android:id="@+id/tomorrowTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[Fecha de Ma単ana]"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/rojo"
                    android:paddingTop="16dp"
                    android:paddingBottom="8dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/tomorrowTasksRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />

                <!-- Section: Pasado Ma単ana -->
                <TextView
                    android:id="@+id/dayAfterTomorrowTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" [Fecha de Pasado Ma単ana]"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/rojo"
                    android:paddingTop="16dp"
                    android:paddingBottom="8dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/dayAfterTomorrowTasksRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/addTaskButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="+"
        android:textSize="30dp"
        android:backgroundTint="@color/rojo"
        android:textColor="@color/white"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
